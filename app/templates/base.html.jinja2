<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Foundation | Welcome</title>
    <!-- Compressed CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.7.5/dist/css/foundation.min.css" crossorigin="anonymous">

    <!-- Compressed JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/foundation-sites@6.7.5/dist/js/foundation.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">

    <link rel="stylesheet" href="{{url_for('static', filename='css/base.css')}}">

  </head>
  <body>
    <!-- nav bar start -->
    <nav>
      <div class = "top-bar">
        {% if session['token_info'] %}
        <div class = "top-bar-left">
          <ul class = "dropdown menu" data-dropdown-menu>
            <a href="{{url_for('index')}}">Statsify</a>
            <li class = "has-submenu">
              <a href = "#">Top songs</a>
              <ul class = "submenu menu vertical" data-submenu>
                <li><a href = "{{url_for('top_tracks', term='short_term')}}">4 weeks</a></li>
                <li><a href = "{{url_for('top_tracks', term='medium_term')}}">6 months</a></li>
                <li><a href = "{{url_for('top_tracks', term='long_term')}}">All time</a></li>
              </ul>
            </li>

            <li class = "has-submenu">
              <a href = "#">Top artists</a>
              <ul class = "submenu menu vertical" data-submenu>
                <li><a href = "{{url_for('top_artists', term='short_term')}}">4 weeks</a></li>
                <li><a href = "{{url_for('top_artists', term='medium_term')}}">6 months</a></li>
                <li><a href = "{{url_for('top_artists', term='long_term')}}">All time</a></li>
              </ul>
            </li>
          </ul>
        </div>
        {% endif %}
        <!-- right nav bar -->
        {% if not session['token_info'] %}
        <div class = "top-bar-right">
          <ul class = "menu">
            <li><a href="{{auth_url}}">Login</a></li>
          </ul>
        </div>
        {% endif %}
      </div>
    </nav>

    <!-- nav bar end -->

    <!-- content start -->
    {% block content %}
    {% endblock %}
    <!-- content end -->

    <!-- footer start -->
    <footer>
      <section>
        <div>
          Author
          <br>
          <a href="https://github.com/mikolaj-mroz/">Github</a>
          <br>
          <a href = "mailto: mikolajmroz.biz@gmail.com">Contact</a>
        </div>
        <div>
          Other Projects
          <br>
          <a href="http://lol-stats.eu-central-1.elasticbeanstalk.com">EZ.GG</a>
          <br>
          <a href="https://github.com/mikolaj-mroz/">More offline projects</a>
        </div>
      </section>
      <div class="ecommerce-footer">
        <!-- footer -->
        <div class="ecommerce-footer-bottom-bar row">
          <div class="small-12 medium-5 columns">
            <ul class="bottom-links">
              <li><a href="{{url_for('privacy')}}">Privacy Policy</a></li>
              <li><a href="{{url_for('tos')}}">Terms &amp; Conditions</a></li>
            </ul>
          </div>
          <div class="small-12 medium-5 columns">
            <div class="bottom-copyright">
              <span>Â©2022 Statsify. All rights reserved.</span>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- footer end -->
    <!-- scripts -->
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>



